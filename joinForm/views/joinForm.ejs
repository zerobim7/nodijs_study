<!DOCTYPE html>
<html>
<head>
  <title> <%= title %></title>
  <meta charset= 'utf-8'>
  <link rel = 'stylesheet' href='/stylesheets/style.css' />
  <script src = "/javascripts/jquery-1.11.2.min.js"></script>
  <script>
  $(function(){
      $("#btnJoin").click(
        function(){
            if($("#id").val() == ""){
                alert("please insert Id");
                $("#id").focus();
                return;
            }
            if($("#passwd").val() == ""){
                alert("please insert password");
                $("#passwd").focus();
                return;
            }
            if($("#name").val() == ""){
                alert("please insert name");
                $("#name").focus();
                return;
            }
            if($("#email").val() == ""){
                alert("please insert email");
                $("#email").focus();
                return;
            }
            if($("#tel2").val() == ""){
                alert("please inspection tel2");
                $("#tel2").focus();
                return;
            }
            if($("#tel3").val() == ""){
                alert("please inspection tel3");
                $("#tel3").focus();
                return;
            }

            var tel = $("#tel1").val() + '-' + $("#tel2").val() + '-' + $("#tel3").val();

            if($("#address").val() == ""){
                alert("please insert address");
                $("#address").focus();
                return;
            }
            if($("#birth").val() == ""){
                alert("please insert birthday");
                $("#birth").focus();
                return;
            }
            if($("#birth").val().length != 8){
                alert("please insert bairthday 8 length");
                $("#birth").focus();
                return;
            }
            $("#joinForm").submit();
        }
      );
  });
  </script>
</head>

<body>
  <h1> <%= title %> </h1>
  <form id="joinForm" action="/join" method="post">
      <table width = "400" border = "1">
          <tr>
              <th>아이디</th>
              <td><input type="text" name="id" id="id" size="12" maxLength="12"></td>
          </tr>
          <tr>
              <th>비밀번호</th>
              <td><input type="password" name="passwd" id="passwd" size="12" maxLength="12"></td>
          </tr>
          <tr>
              <th>이름</th>
              <td><input type="text" name="name" id="name" size="10" maxLength="10"></td>
          </tr>
          <tr>
              <th>이메일</th>
              <td><input type="text" name="email" id="email" size="30" maxLength="50"></td>
          </tr>
          <tr>
              <th>전화번호</th>
              <td>
              <select name="tel1" id="tel1">
                  <option value="010">010</option>
                  <option value="011">011</option>
                  <option value="016">016</option>
                  <option value="017">010</option>
                  <option value="018">018</option>
                  <option value="019">019</option>
              </select>

              <input type="text" name="tel2" id="tel2" size="4" maxlenth="4">
              <input type="text" name="tel3" id="tel3" size="4" maxlenth="4">
              </td>
          </tr>
          <tr>
              <th>주소</th>
              <td><input type="text" name="address" id="address" size="30" maxLength="50"></td>
          </tr>
          <tr>
              <th>성별</th>
              <td>
                  <input type="radio" name="gender" value="남" checked="checked"> 남
                  <input type="radio" name="gender" value="여" > 여
              </td>
          </tr>
          <tr>
              <th>생일</th>
              <td><input type="text" name="birth" id="birth" size="8" maxLength="8">YYYYMMDD</td>
          </tr>
          <tr>
              <td colspan="2">
                    <input type="button" id="btnJoin" name="join" value="가입">
                    <input type="reset"  name="cancel" value="취소">
              </td>
          </tr>
    </table>
  </form>

</body>
</html>
